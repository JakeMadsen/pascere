<div class="container green-background ">
    <div class="row" style="padding: 20px 0px 20px 0px;">
        <div class="col-md-6">
            <h4>Sign in</h4>
            <form method="POST" action="/login">
                <div class="form-outline mb-4">
                    <% if (Object.keys(page_data.login_error).length !=0) { %>
                        <input id="login_email" name="email" class="form-control" placeholder="" type="text" autocomplete="email" value="<%= page_data.login_error.flash[0].login %>">
                    <% } else { %>
                        <input id="login_email" name="email" class="form-control" placeholder="" type="text" autocomplete="email">
                    <% } %>
                    <label class="form-label" for="form1Example1" style="margin-left: 0px;">Username or Email</label>
                    <div class="form-notch">
                        <div class="form-notch-leading" style="width: 9px;"></div>
                        <div class="form-notch-middle" style="width: 88.8px;"></div>
                        <div class="form-notch-trailing"></div>
                    </div>
                </div>
                <div class="form-outline mb-4">
                    <input id="login_password" name="password" class="form-control" placeholder="" type="password" autocomplete="current-password">
                    <label class="form-label" for="form1Example1" style="margin-left: 0px;">Password</label>
                    <div class="form-notch">
                        <div class="form-notch-leading" style="width: 9px;"></div>
                        <div class="form-notch-middle" style="width: 88.8px;"></div>
                        <div class="form-notch-trailing"></div>
                    </div>
                </div>
                <div class="form-outline mb-4">
                    <button id="login_submit" type="submit" class="btn btn-block btn-outline-primary" disabled> Login
                    </button>
                </div>
                <% if (Object.keys(page_data.login_error).length !=0) { %>
                    <div class="alert alert-danger">
                        <h3 style="color: #101010; text-align: center;">
                            <%= page_data.login_error.flash[0].error %>
                        </h3>
                    </div>
                <% } %>

                <!-- <a class="small float-right" href="#">Forgot password?</a> -->
            </form>
        </div>

